{
  "name": "@the-tricktionary/api",
  "version": "1.0.0",
  "description": "GraphQL API for the Tricktionary",
  "main": "dist/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc -p tsconfig.production.json",
    "dev": "ts-node-dev --rs --respawn src/index.ts",
    "lint": "eslint . --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "codegen": "graphql-codegen --config codegen.yml",
    "codegen:watch": "npm run codegen -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/the-tricktionary/api.git"
  },
  "author": "the Tricktionary <contact@the-tricktionary.com> (https://the-tricktionary.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/the-tricktionary/api/issues"
  },
  "homepage": "https://the-tricktionary.com",
  "dependencies": {
    "@google-cloud/firestore": "^4.11.1",
    "@sentry/node": "^6.4.0",
    "@sentry/tracing": "^6.4.0",
    "apollo-datasource-firestore": "^2.2.0",
    "apollo-server": "^2.24.0",
    "deepmerge": "^4.2.2",
    "dotenv": "^9.0.2",
    "firebase-admin": "^9.100.0-alpha.0",
    "firestore-admin": "^1.3.0",
    "graphql": "^15.5.0"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^2.0.2",
    "@graphql-codegen/cli": "^1.21.4",
    "@graphql-codegen/introspection": "^1.18.2",
    "@graphql-codegen/typescript-resolvers": "^1.19.1",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "apollo-server-plugin-base": "^0.12.0",
    "eslint": "^7.26.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4"
  }
}
