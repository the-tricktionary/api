{
  "name": "@the-tricktionary/api",
  "version": "1.0.0",
  "description": "GraphQL API for the Tricktionary",
  "main": "dist/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc -p tsconfig.production.json",
    "dev": "ts-node-dev --rs --respawn src/index.ts | pino-pretty",
    "lint": "eslint . --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "typecheck": "tsc --noEmit",
    "codegen": "graphql-codegen --config codegen.yml",
    "codegen:watch": "npm run codegen -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/the-tricktionary/api.git"
  },
  "author": "the Tricktionary <contact@the-tricktionary.com> (https://the-tricktionary.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/the-tricktionary/api/issues"
  },
  "homepage": "https://the-tricktionary.com",
  "dependencies": {
    "@google-cloud/firestore": "^4.13.1",
    "@sentry/node": "^6.8.0",
    "@sentry/tracing": "^6.8.0",
    "algoliasearch": "^4.10.2",
    "apollo-datasource-firestore": "^3.0.0",
    "apollo-server": "^2.25.2",
    "deepmerge": "^4.2.2",
    "dotenv": "^10.0.0",
    "firebase-admin": "^9.100.0-alpha.1",
    "graphql": "^15.5.1",
    "pino": "^6.11.3",
    "stripe": "^8.160.0"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^2.0.2",
    "@graphql-codegen/cli": "^1.21.6",
    "@graphql-codegen/introspection": "^1.18.2",
    "@graphql-codegen/typescript-resolvers": "^1.19.5",
    "@types/pino": "^6.3.8",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "apollo-server-plugin-base": "^0.13.0",
    "eslint": "^7.29.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "pino-pretty": "^5.1.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "4.2.*"
  }
}
